<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/common_margin_16">

    <LinearLayout
        android:layout_below="@+id/cardview"
        android:layout_margin="@dimen/common_margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="18sp"
            android:textColor="@color/black_light"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/common_margin_5"
            android:inputType="textPassword"
            android:background="@drawable/background_border_lines"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/common_margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="18sp"
            android:textColor="@color/black_light"/>

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/common_margin_5"
            android:inputType="textPassword"
            android:background="@drawable/background_border_lines"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llt_finish"
        android:layout_below="@+id/llt2"
        android:layout_margin="@dimen/common_margin_16"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提交"
            android:textSize="18sp"
            android:textColor="@color/black_light"
            android:background="@drawable/bg_border_select"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>